{
    "manifest_version": 3,
    "name": "Twitter Mastodon Linkifier",
    "version": "1.0.0",
    "description": "Twitter Mastodon Linkifier makes Mastodon usernames (like `@username@mastodon.social`) into clickable links on twitter.com.",
    "icons": {
        "16": "./assets/16.png",
        "32": "./assets/32.png",
        "48": "./assets/48.png",
        "256": "./assets/256.png",
        "512": "./assets/512.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://mobile.twitter.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "script.js"
            ],
            "matches": [
                "https://twitter.com/*",
                "https://mobile.twitter.com/*"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "./assets/16.png",
            "32": "./assets/32.png"
        },
        "default_title": "Twitter Mastodon Linkifier - Options",
        "default_popup": "options/options.html"
    },
    "permissions": [
        "storage"
    ]
}